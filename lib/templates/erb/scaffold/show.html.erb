<!-- Hero -->
<div class="bg-image overflow-hidden" style="background-image: url(<%%= picture_home_path %>);">
    <div class="bg-primary-dark-op">
        <div class="content content-narrow content-full">
            <div class="d-flex flex-column flex-sm-row justify-content-sm-between align-items-sm-center mt-5 mb-2 text-center text-sm-left">
                <div class="flex-sm-fill">
                    <h1 class="font-w600 text-white mb-0 invisible" data-toggle="appear"><%%= @<%= singular_table_name %> %></h1>
                    <h2 class="h4 font-w400 text-white-75 mb-0 invisible" data-toggle="appear" data-timeout="250"> <%%= link_to 'Todos', <%= index_helper %>_path, class: 'text-white' %> </h2>
                </div>
                <div class="flex-sm-00-auto mt-3 mt-sm-0 ml-sm-3">
                    <span class="d-inline-block invisible" data-toggle="appear" data-timeout="350">
                        <%%= link_to edit_<%= singular_table_name %>_path(@<%= singular_table_name %>), class: "btn btn-sm btn-kambandu" do  %>
                            <i class="fa fa-edit mr-1"></i> Atualizar
                        <%% end %>
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- END Hero -->


<div class="content mb-3">
    <div class="block mb-3">
        <div class="block-content">
            <div class="row">
                <div class="col-md-5">
                    <% attributes.reject(&:password_digest?).each do |attribute| -%>
                    <p><span class="font-w600 mb-2"><%= attribute.human_name %>: </span><span class="font-size-sm"><%%= @<%= singular_table_name %>.<%= attribute.name %> %></span></p>
                    <% end -%>
                </div>
            </div>
            <br>
        </div>
    </div>
</div>
