
<%= render 'layouts/partials/header/header_index' %>
<main>
    <section class="works">
        <div class="container">
            <div class="works-title wow fadeIn">
                <h2>Quem somos</h2>
                <p><%= setting.about_us %></p>
            </div>
            <!-- end works-title -->
        </div>
        <!-- end container -->

    </section>

    <section class="services-content-block" style="background: url('/banner.png') center no-repeat;">
        <div class="container">
            <div class="row">
                <div class="col-md-4 wow fadeIn">
                    <div class="content-box content-box-board">
                        <h4>Missão</h4>
                        <ul>
                            <li><%= setting.mission %></li>
                        </ul>
                    </div>
                    <!-- end content-box -->
                </div>
                <!-- end col-4 -->
                
                <div class="col-md-4 wow fadeIn" data-wow-delay="0.1s">
                    <div class="content-box content-box-board">
                        <h4>Visão</h4>
                        <ul>
                            <li><%= setting.vision %></li>
                        </ul>
                    </div>
                    <!-- end content-box -->
                </div>
                <!-- end col-4 -->
                
                <div class="col-md-4 wow fadeIn" data-wow-delay="0.2s">
                    <div class="content-box content-box-board">
                        <h4>Valores</h4>
                        <ul>
                            <li><%= setting.values %></li>

                        </ul>
                    </div>
                    <!-- end content-box -->
                </div>
                <!-- end col-4 -->
            </div>
            <!-- end row -->
        </div>
        <!-- end container -->
    </section>

    <section class="text-content-block">
        <div class="container section-jk">
            <div class="row">
                <div class="col-lg-4 fadeIn">
                    <br>
                    <br>
                    <br>
                    <h2 class="text-white">
                        .:: 
                            <br>Grupo JK
                            <br> Jeremias e Kanguito <br>
                        .::
                    </h2>
                </div>

                <div class="col-lg-4 fadeOut">
                    <h5 class="text-white">PRESPECTIVA</h5>
                    <br>
                    <p class="text-white"><%= setting.prespective %></p>
                </div>

                <div class="col-lg-4 fadeIn">
                    <h5 class="text-white">OBJECTIVO</h5>
                    <br>
                    <p class="text-white"><%= setting.objectives %></p>
                </div>
            </div>
            <!-- end row -->
        </div>
        <!-- end container -->
    </section>

    <!-- end icon-content-block -->
    <section class="clients">
        <div class="container wow fadeIn">
            <h2>MEMBROS</h2>
            <br>
            <br>
            <div class="container">
                <div class="row justify-content-md-center">
                    <% @members.each do |member| %>
                        <div class="col-lg-2 text-center">
                            <%= link_to member_details_url(member) do %>
                                <% if member.company_logo.attached? %>
                                    <%= image_tag(member.company_logo, class: "img-fluid img-thumbnail img-members") %>                                  
                                <% end %>
                            <% end %>
                            <p class="mt-2"><%= member.company_name %></p>
                        </div>
                    <% end %> 
                </div>
                <!-- end row -->
            </div>
            <br>
            <br>

        </div>
        <!-- end container -->
    </section>
    <!-- end clients -->

    <!-- end works -->
    <section class="side-content-block bg-image" data-background="/images/site/networking.png">
        <div class="container">
            <div class="inner">
                <div class="holder wow fadeIn" style="color: #fff">
                    <p>
                        É um espaço para reuniões de negócios e lazer para os membros do grupo que possuem os cartões. 
                        Os mesmos têm uma série de benefícios sociais como; acesso para hotéis, restaurantes, resortes encontros de negócios.
                    </p>
                    <h6>Clube de Negócios</h6>
                </div>
                <!-- end holder -->
            </div>
            <!-- end inner -->
        </div>
        <!-- end container -->
    </section>

    <!-- end side-content-block -->
    <section class="awards" id="odometer" style="background: url(/fundo-project.jpeg) center no-repeat;">
        <div class="container">
            <div class="row">
                <div class="col-lg-7 text-center">
                    <div class="row inner">
                        <div class="col-4 wow fadeIn estatistic-boader">
                            <br>
                            <br>
                            <span class="color-estat" style="font-size: 20px;">Membros</span> <br>
                            <span class="color-estat odometer"><%= Member.all.count %></span>
                        </div>
                        <div class="col-4 wow fadeIn estatistic-boader">
                            <br>
                            <br>
                            <span class="color-estat" style="font-size: 20px;">Contratos</span> <br>
                            <span class="color-estat odometer"><%= setting.agreements %></span>
                        </div>

                        <div class="col-4 wow fadeIn estatistic-boader">
                            <br>
                            <br>
                            <span class="color-estat" style="font-size: 20px;">Serviços/Produtos</span> <br>
                            <span class="color-estat odometer"><%= Product.all.count%></span>
                        </div>
                    </div>
                </div>
                <!-- end col-7 -->
                <div class="col-lg-5 text-right wow fadeIn" data-wow-delay="0.3s">
                    <h3 class="text-white">Nossos Projectos</h3>
                    <br>
                    <p class="text-white"><%= setting.project_text %></p>
                </div>
                <!--end col-5 -->
            </div>
            <!-- end row -->
        </div>
        <!-- end container -->
    </section>

    <!-- end icon-content-block -->
    <section class="clients">
        <div class="container wow fadeIn">
            <h2>PARCEIROS</h2>
            <div class="row justify-content-md-center">
                <% @partners.each do |partner| %>
                    <div class="col-md-2 fadeIn" data-wow-delay="0s">
                        <% if partner.picture.attached? %>
                            <%= image_tag(partner.picture, class: "img-fluid img-members") %>                                  
                        <% end %>
                        <%= partner.name %>
                    </div>
                <% end %>
            </div>
        </div>
        <!-- end container -->
    </section>
    <!-- end clients -->
    <%= render 'layouts/partials/footer' %>
</main>

        <!-- JS FILES --> 
        <script src="/templete-site/js/jquery.min.js"></script>
        <script src="/templete-site/js/bootstrap.min.js"></script> 
        <script src="/templete-site/js/swiper.min.js"></script> 
        <script src="/templete-site/js/jquery.stellar.js"></script> 
        <script src="/templete-site/js/isotope.min.js"></script> 
        <script src="/templete-site/js/imagesloaded.pkgd.min.js"></script> 
        <script src="/templete-site/js/jquery.typewriter.js"></script> 
        <script src="/templete-site/js/odometer.min.js"></script>  
        <script src="/templete-site/js/fancybox.min.js"></script> 
        <script src="/templete-site/js/wow.min.js"></script> 
        <script src="/templete-site/js/scripts.js"></script>


<style>

.services-content-block .content-box{
    border-radius: 50% !important;
    padding: 40px !important;
}

.img-members{
    width: 100%;
    aspect-ratio: 3/2;
    object-fit: contain;
}

.estatistic-boader{
    background-color: #fff;
    border-radius: 10px;
    padding: 20px;
    text-align: center;
    margin: 14px
}

.color-estat{
    color: #568789;
}


</style>