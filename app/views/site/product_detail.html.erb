
<%= render 'layouts/partials/header/header_about', subject: @product.name %>

<main>
    <section class="contact">
        <div class="container">
            <div class="row">
                <div class="col-12 wow fadeIn">
                    <div class="title">
                        <h3><%= @product.name %></h3>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-8 wow fadeIn">
                        <div class="title">
                            <p><%= @product.description %></p>
                        </div>
                        <!--end title -->
                    </div>

                    <div class="col-md-4 wow fadeIn">
                        <% if @product.picture.attached? %>
                            <%= image_tag(@product.picture, class: "img-fluid") %>                                  
                        <% end %>
                    </div>

                </div>


            </div>
        </div>
    </section>

    <%= render 'layouts/partials/footer' %>
    <!-- end sub-footer --> 
</main>
<!-- end main -->

