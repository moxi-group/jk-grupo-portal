
<!-- Main Container -->
<main id="main-container">

    <div class="bg-image" style="background-image: url(<%= picture_home_path %>);">
        <div class="hero-static bg-white-95">
            <div class="content">
            
                <div class="row justify-content-center mt-5">
                    <div class="col-md-8 col-lg-6 col-xl-3">
                        <p class="text-center">
                            <%= link_to root_path do %>
                                <img src="/logo.png" class="img-fluid" alt="logotipo" style="width: 300px;">
                            <% end %>
                        </p>

                        <!-- Sign In Block -->
                        <div class="block block-themed block-fx-shadow mb-0">

                            <div class="block-content">
                                <div class="p-2">

                                    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), class: "js-validation-signin") do |f| %>

                                        <div class="py-3">
                                            <div class="form-group">
                                                <%= f.input :login, autofocus: true, autocomplete: "email", placeholder: "Telefone / e-mail", label: "Utitlizador" %>
                                            </div>

                                            <div class="form-group">
                                                <%= f.input :password, placeholder: "****", label: 'Senha' %>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <div class="col-md-12">
                                                <button type="submit" class="btn btn-success btn-block">
                                                    <i class="fa fa-fw fa-sign-in-alt mr-1"></i> Iniciar sess√£o
                                                </button>
                                            </div>
                                        </div>

                                    <% end %>

                                </div>
                            </div>
                        </div>
                        <!-- END Sign In Block -->
                    </div>
                </div>
            </div>
            <div class="content content-full font-size-sm text-muted text-center">

            </div>
        </div>
    </div>

</main>



<style>
.block.block-fx-shadow{
    background-color: #2d338b;
}

.form-label{
    color: #fff;
}
</style>