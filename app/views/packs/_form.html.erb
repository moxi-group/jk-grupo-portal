
<div class="content content-boxed">
    <div class="block">
        <div class="block-content">
            <div class="row">
                <div class="col-md-12">
                    <%= simple_form_for(@pack) do |f| %>
                        <%= f.error_notification %>
                        <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

                        <div class="row">
                            <div class="col-md-6">
                                    <%= f.input :name, label: 'Nome do pacote' %>
                                    <%= f.input :price, label: 'preço' %>
                            </div>
                            <div class="col-md-6">

                            </div>
                        </div>


                        <div class="row">
                            <div class="col-md-12">
                                <%= f.rich_text_area :description, label: 'Descrição' %>
                            </div>
                        </div>

                        <hr />

                        <div class="form-actions text-right">
                            <%= f.button :submit, "#{@pack.id.present? ? 'Actualizar' : 'Registar'}", class: "btn btn-success btn-sm" %>
                            <%= link_to 'Cancelar', back_url, class: 'btn btn-sm btn-danger' %>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>