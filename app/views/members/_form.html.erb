
<div class="content content-boxed">
    <div class="block">
        <div class="block-content">
            <div class="row">
                <div class="col-md-12">
                    <%= simple_form_for(@member) do |f| %>
                        <%= f.error_notification %>
                        <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

                        <div class="row">
                            <div class="col-md-6">
                                    <h4>Informações da Empresa</h4>
                                    <%= f.input :company_name, label: 'Nome da empresa' %>
                                    <%= f.input :company_nif, label: 'NIF' %>
                                    <%= f.input :company_address, label: 'Endereço' %>
                                    <%= f.input :company_cell_phone, label: 'Nº telefone' %>
                                    <%= f.input :company_email, label: 'E-mail' %>
                                    <%= f.input :company_area, label: 'Área associada' %>
                                    <%= f.input :company_logo, label: 'Link do logotipo' %>
                                    <%= f.association :pack, label: 'Selecionar o Pacote' %>
                                    <hr>
                                    <%= f.input :status, label: 'Marca para Activar' %>
                            </div>
                            <div class="col-md-6">
                                    <h4>Informações do representante</h4>
                                    <%= f.input :name, label: 'Nome do representate' %>
                                    <%= f.input :email, label: 'E-mail do representate' %>
                                    <%= f.input :cell_phone, label: 'Nº telefone' %>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <%= f.rich_text_area :description, label: 'Descrição' %>
                            </div>
                        </div>

                        <hr />

                        <div class="form-actions text-right">
                            <%= f.button :submit, "#{@member.id.present? ? 'Actualizar' : 'Registar'}", class: "btn btn-success btn-sm" %>
                            <%= link_to 'Cancelar', back_url, class: 'btn btn-sm btn-danger' %>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>